<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>
  <body>
    <h1>Editing Book</h1>
    <%= form_with model: @book do |f| %>
      <div class="field">
        <div class="title">Title</div>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <div class="body">Body</div>
        <%= f.text_area :body %>
      </div>
      <div class="field">
      <%= f.submit 'Update Book' %>
      </div>
    <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", '/books' %>
  </body>
</html>