<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>
  <body>
    <p class="flash"><%= flash[:alert] %></p>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "Show", book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="form">
      <h2>New book</h2>
      <% if @book.errors.any? %>
       <%= @book.errors.count %>errors prohibited this book from being saved:
       <ul>
         <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
       </ul>
      <% end %>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <div class="field">
            <div class="title">Title</div>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <div class="body">Body</div>
            <%= f.text_area :body %>
          </div>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </body>
</html>