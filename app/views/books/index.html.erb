          <td>
            <a class="" href="">Show</a>
          </td>
          <td>
            <a class="" href="">Edit</a>
          </td>
          <td>
            <a class="" href="">Destroy</a>
          </td>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <a class="" href="/books/:id">Show</a>
          </td>
          <td>
            <a class="" href="/books/edit">Edit</a>
          </td>
          <td>
            <a class="" href="">Destroy</a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="form">
      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <div class="field">
            <div class="title">Title</div>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <div class="body">Body</div>
            <%= f.text_area :body %>
          </div>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </body>
</html>